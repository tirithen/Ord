extends layout

block content
  main.col-xs-10(role="main", data-ng-controller="Page")
    if page
      | #{page.content}
    else
      div.alert.alert-danger
        p
          strong Page not found!
          | &nbsp;The page you requested could not be found.&nbsp;
          a(href="/") Return to start page
    p
      button(data-ng-).btn.btn-default Create a new page here
