div.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
  div.container-fluid
    div.navbar-header
      button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/")= settings.name
    div.collapse.navbar-collapse
      ul.nav.navbar-nav
        each rootPage in rootPages
          if rootPage.isPublished && rootPage.title
            if page && page.breadcrumbs[0] && page.breadcrumbs[0]._id.toString() === rootPage._id.toString()
              li(class="active")
                a(href="/#{encodeURI(rootPage.url)}")= rootPage.title
            else
              li
                a(href="/#{encodeURI(rootPage.url)}")= rootPage.title
      ul.nav.navbar-nav.pull-right
        if req.user
          li
            a(href="/administration/page/create").btn.btn-info Create a new Page
          li
            a
              img(src="#{req.user.image}", height="16").img-circle
              | &nbsp;
              span= req.user.name
          li
            a(href="/logout") Logout
        else
          li.pull-right
            a(href="/login") Login
